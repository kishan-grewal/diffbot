<?xml version="1.0"?>
<!--diffbot with one link for now, just a box-->
<robot name="diffbot">

  <!--all the links first-->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.6 0.2"/>
      </geometry>
    </visual>
  </link>

  <!--the "height" of the wheels is the radius-->
  <link name="left_wheel_link">
    <visual>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.1"/>
      </geometry>
    </visual>
  </link>

  <link name="right_wheel_link">
    <visual>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.1"/>
      </geometry>
    </visual>
  </link>

  <!--all the joints for the tf2 tree-->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin rpy="0 0 0" xyz="0 -0.2 -0.15"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin rpy="0 0 0" xyz="0 0.2 -0.15"/>
  </joint>

</robot>